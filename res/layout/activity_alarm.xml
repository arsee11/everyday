<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >

	<LinearLayout android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="0.9"
		android:orientation="vertical" >
		
		<TextView android:id="@+id/alarm_textView_job"
			android:gravity="center_vertical"
			android:layout_gravity="center"
			android:layout_height="0dp"
			android:layout_weight="0.7"
			android:layout_width="wrap_content"
			android:textColor="#ff0000"
			android:textSize="36dp"
		/>

		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="0.3"
			android:orientation="horizontal">\
			
			
				<TextView android:id="@+id/alarm_textView_jobStart"
					android:gravity="center_vertical|center_horizontal"
					android:layout_height="match_parent"
					android:layout_width="0dp"
					android:layout_weight="0.5"
					android:textSize="24dp"
					android:textColor="#00ff00"
				/>

				<TextView android:gravity="center_vertical|center_horizontal"
					android:layout_height="match_parent"
					android:layout_width="wrap_content"
					android:textSize="24dp"
					android:textColor="#00ff00"
					android:text="~"
				/>
				
				<TextView android:id="@+id/alarm_textView_jobEnd"
					android:gravity="center_vertical|center_horizontal"
					android:layout_height="match_parent"
					android:layout_width="0dp"
					android:layout_weight="0.5"
					android:textSize="24dp"
					android:textColor="#00ff00"
				/>
		</LinearLayout>
	</LinearLayout>

	<LinearLayout android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="0.1"
		android:orientation="horizontal">

		<Button android:id="@+id/alarm_button_cancel"
			android:gravity="center"
			android:layout_height="match_parent"
			android:layout_width="0dp"
			android:layout_weight="0.5"
			android:textSize="24dp"
			android:text="确定"
		/>

	</LinearLayout>
</LinearLayout>
